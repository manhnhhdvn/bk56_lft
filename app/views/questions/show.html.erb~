<h3>Answers</h3>

<table>
  <thead>
    <tr>
      <th class="col-md-2">Answer id</th>
      <th class="col-md-2">Content</th>
      <th class="">Tags</th>      
      <th class="col-md-2">User</th>

    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td class="col-md-2"><%= answer.id %></td>
        <td class="col-md-2"><%= answer.description %></td>

        <td class="col-md-2"><%= User.find(answer.user_id).username %></td>     
    <td>  <%= link_to "Upvote", {:controller =>"answers", :action => "upvote", :id => answer.id}, :class => 'btn', method: :put %></td>
        <td>  <%= link_to "Downvote", {:controller =>"answers", :action => "downvote", :id => answer.id}, :class => 'btn', method: :put %></td>
        <% if signed_in? %>
		      <% if current_user.id == answer.user_id  %>
						<td>	<%= link_to 'Edit', '/questions/'+@question.id.to_s+'/answers/'+answer.id.to_s+'/edit' %>        		</td>
			      <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %>
			      </td>
		      <% end %>        
       <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>

